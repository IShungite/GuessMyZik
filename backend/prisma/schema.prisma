// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameState {
  WAITING
  PLAYING
  FINISHED
}

enum GameMode {
  FIND_THE_ARTIST
  FIND_THE_TRACK
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String

  GamePlayers GamePlayer[]
}

model Game {
  id String @id @default(uuid())

  state                 GameState @default(WAITING)
  gameMode              GameMode  @default(FIND_THE_ARTIST)
  joinCode              String
  playlistId            Float // playlistId is an integer but a BIG number so INT cant be used to save the value. Neither BIGINT (CANT SERIALIZE A BIG INT)
  totalPlaylistTrack    Int
  currentQuestionNumber Int       @default(0)
  maxQuestions          Int       @default(1)
  maxSuggestions        Int       @default(4)
  maxPlayers            Int       @default(4)
  timerDuration         Int       @default(15)

  gamePlayers   GamePlayer[]
  gameQuestions GameQuestion[]
}

model GamePlayer {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  game   Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId String

  socketId String

  score Int @default(0)

  isOwner     Boolean @default(false)
  isConnected Boolean @default(false)

  gamePlayerAnswers GamePlayerAnswer[]
}

model GamePlayerAnswer {
  id String @id @default(uuid())

  gamePlayer   GamePlayer @relation(fields: [gamePlayerId], references: [id], onDelete: Cascade)
  gamePlayerId String

  gameAnswer   GameAnswer @relation(fields: [gameAnswerId], references: [id])
  gameAnswerId String
}

model GameQuestion {
  id String @id @default(uuid())

  trackId Float // trackId is an integer but a BIG number so INT cant be used to save the value. Neither BIGINT (CANT SERIALIZE A BIG INT)
  isDone  Boolean @default(false)

  number Int

  game   Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId String

  answers GameAnswer[]
}

model GameAnswer {
  id String @id @default(uuid())

  question   GameQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId String

  value   String
  isRight Boolean

  GamePlayerAnswer GamePlayerAnswer[]
}
